    <meta name="author" content="">
    
    <title>Welcome to Sơn's room</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/Content/fonts/Home/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/fonts/Home/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
   
    <!-- Fonts -->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
