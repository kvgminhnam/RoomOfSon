    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />


    <link href="~/Content/css/Home/animate.css" rel="stylesheet" />
    <!-- Squad theme CSS -->

    <link href="~/Content/css/Home/style.css" rel="stylesheet">


    <link href="~/Content/color/default.css" rel="stylesheet">
    <script src="~/Content/js/QLBH/jquery.min.js"></script>
    <style>


        /*.container * {
            font-family: 'Times New Roman';
        }*/
        .tbl-max-height {
            max-height: 800px;
            overflow:hidden;
